<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <com.dou361.customui.ui.RatioLayout xmlns:dou361="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/global_height_mid"
                                        android:layout_marginLeft="@dimen/global_margin_mid"
                                        android:layout_marginRight="@dimen/global_margin_mid"
                                        android:layout_marginTop="@dimen/global_height_mid"
                                        dou361:ratio="1.82">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/home_bg"/>
    </com.dou361.customui.ui.RatioLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_height_mid"
        android:layout_marginLeft="@dimen/global_margin_mid"
        android:layout_marginRight="@dimen/global_margin_mid"
        android:background="@drawable/btn_login"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/global_text_size_mid"/>


</LinearLayout>