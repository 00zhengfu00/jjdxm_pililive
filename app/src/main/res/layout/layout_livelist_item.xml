<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_item"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="0dp"
              android:layout_height="200dp"
              android:layout_weight="1"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/global_margin_mid"
            android:layout_marginTop="@dimen/global_margin_mid"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:paddingBottom="@dimen/global_margin_small"
            android:paddingLeft="@dimen/global_margin_mid"
            android:paddingRight="@dimen/global_margin_mid"
            android:paddingTop="@dimen/global_margin_small"
            android:text="直播"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size_small"/>


        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/global_margin_mid"
            android:layout_marginLeft="@dimen/global_margin_mid"
            android:background="@drawable/shape_white_solid"
            android:lines="1"
            android:paddingBottom="@dimen/global_margin_small"
            android:paddingLeft="@dimen/global_margin_mid"
            android:paddingRight="@dimen/global_margin_mid"
            android:paddingTop="@dimen/global_margin_small"
            android:text="Tom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_size_small"/>

        <TextView
            android:id="@+id/audience_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/global_margin_mid"
            android:layout_marginRight="@dimen/global_margin_mid"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="1 person"
            android:textColor="@color/placeholder"
            android:textSize="@dimen/global_text_size_small"
            />
    </RelativeLayout>
</LinearLayout>
